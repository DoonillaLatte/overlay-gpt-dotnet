<Window x:Class="overlay_gpt.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:overlay_gpt"
        Title="로그" Height="600" Width="800"
        WindowStartupLocation="Manual"
        Top="0" Left="0"
        Background="#F5F5F5"
        x:Name="LogWindowControl">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5,5,0,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10" 
                Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="서버" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="타입" Margin="0,0,0,5"/>
                
                <ComboBox x:Name="ServerComboBox" 
                          Grid.Row="1" Grid.Column="0" 
                          Margin="0,0,10,0">
                    <ComboBoxItem Content="Flask" IsSelected="True"/>
                    <ComboBoxItem Content="Vue"/>
                </ComboBox>

                <ComboBox x:Name="ParameterTypeComboBox"
                         Grid.Row="1" Grid.Column="1"
                         Margin="0,0,10,0"
                         SelectionChanged="ParameterTypeComboBox_SelectionChanged">
                    <ComboBoxItem Content="DisplayTextMessage" IsSelected="True"/>
                    <ComboBoxItem Content="ProgramInfo"/>
                    <ComboBoxItem Content="Custom JSON"/>
                </ComboBox>
                
                <Button x:Name="SendTestMessageButton" 
                        Grid.Row="1" Grid.Column="2" 
                        Content="전송" 
                        Margin="0,0,0,0"
                        Click="SendTestMessageButton_Click"/>

                <Button x:Name="ShowAllChatsButton"
                        Grid.Row="1" Grid.Column="3"
                        Content="채팅 목록"
                        Margin="5,0,0,0"
                        Click="ShowAllChatsButton_Click"/>

                <TextBlock Grid.Row="2" Grid.Column="0" 
                          Text="파라미터" 
                          Margin="0,10,0,5"/>
                
                <TextBox x:Name="ParameterTextBox" 
                         Grid.Row="2" Grid.Column="0" 
                         Grid.ColumnSpan="4"
                         Height="200"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,5">
                    <TextBox.ToolTip>
                        <TextBlock Text="Parameter (JSON)"/>
                    </TextBox.ToolTip>
                </TextBox>

                <Button x:Name="ApplyContextButton" 
                        Grid.Row="3" Grid.Column="2"
                        Content="Word 컨텍스트 적용 테스트" 
                        Click="ApplyContextButton_Click" 
                        Margin="5,10,0,0"/>

                <Button x:Name="ApplyExcelContextButton" 
                        Grid.Row="3" Grid.Column="3"
                        Content="Excel 컨텍스트 적용 테스트" 
                        Click="ApplyExcelContextButton_Click" 
                        Margin="5,10,0,0"/>

                <Button x:Name="ApplyPPTContextButton" 
                        Grid.Row="3" Grid.Column="0"
                        Content="PowerPoint 컨텍스트 적용 테스트" 
                        Click="ApplyPPTContextButton_Click" 
                        Margin="5,10,0,0"/>

                <Button x:Name="TestNtfsFileFinderButton" 
                        Grid.Row="3" Grid.Column="1"
                        Content="NTFS 파일 찾기 테스트" 
                        Click="TestNtfsFileFinderButton_Click" 
                        Margin="5,10,0,0"/>
            </Grid>
        </Border>
        
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                          Text="로그" 
                          Margin="10,5"/>
                
                <RichTextBox x:Name="LogRichTextBox" 
                            Grid.Row="1"
                            Margin="5" 
                            IsReadOnly="True"
                            VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Auto">
                    <RichTextBox.Resources>
                        <Style TargetType="{x:Type Paragraph}">
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                    </RichTextBox.Resources>
                </RichTextBox>
            </Grid>
        </Border>
    </Grid>
</Window> 
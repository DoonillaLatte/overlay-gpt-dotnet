<Window x:Class="overlay_gpt.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:overlay_gpt"
        mc:Ignorable="d"
        Title="OverlayWindow"
        Width="600" Height="70"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">
    <Border Background="#AA000000" 
            CornerRadius="20"
            Margin="5">
        <Border Background="#343541" 
                CornerRadius="20"
                Margin="2">
            <Grid Margin="10,5">
                <Border Background="#40414F"
                        BorderThickness="1"
                        BorderBrush="#565869"
                        CornerRadius="20">
                    <TextBox x:Name="inputTextBox"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Height="45"
                            Padding="20,0"
                            VerticalContentAlignment="Center"
                            FontSize="14"/>
                </Border>
                
                <Border HorizontalAlignment="Right"
                        Width="45"
                        Height="35"
                        Background="#19C37D"
                        CornerRadius="15"
                        Margin="0,0,15,0">
                    <Button Content="⏎"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"/>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>
